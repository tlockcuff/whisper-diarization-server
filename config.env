# Whisper Diarization Server Configuration

# Model Configuration
ASR_MODEL=base
DIARIZATION_MODEL=pyannote/speaker-diarization@2.1
HF_TOKEN=your_huggingface_token_here

# Hardware Configuration
FORCE_CPU=false
MAX_GPU_MEMORY_FRACTION=0.8
CUDA_DEVICE=0

# Performance Configuration
BATCH_SIZE=1
MAX_AUDIO_LENGTH=300
ENABLE_STREAMING=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/server.log

# Cache Configuration
CACHE_DIR=/app/cache

# Docker Configuration (for docker-compose)
CUDA_IMAGE_TAG=12.4.1-cudnn-devel-ubuntu22.04
TORCH_CUDA_TAG=cu124
